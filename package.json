{
  "name": "mocha-emailable",
  "version": "1.0.1",
  "description": "A single page emailable reporter for Mocha.js",
  "scripts": {
    "lint": "eslint src"
  },
  "author": "Chanatan Charnkijtawarush",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ccharnkij/mocha-emailable"
  },
  "keywords": [
    "mocha",
    "reporter",
    "json",
    "html"
  ],
  "main": "src/mochaEmailable.js",
  "files": [
    "addContext.js",
    "register.js",
    "src",
    "templates"
  ],
  "nyc": {
    "include": [
      "src/*.js"
    ],
    "reporter": [
      "lcov",
      "html",
      "text-summary"
    ],
    "cache": false,
    "check-coverage": true,
    "lines": 99,
    "statements": 99,
    "functions": 100,
    "branches": 90
  },
  "dependencies": {
    "app-root-path": "^3.0.0",
    "chalk": "^4.1.2",
    "diff": "^5.0.0",
    "json-stringify-safe": "^5.0.1",
    "lodash.isempty": "^4.4.0",
    "lodash.isfunction": "^3.0.9",
    "lodash.isobject": "^3.0.2",
    "lodash.isstring": "^4.0.1",
    "nunjucks": "^3.2.3",
    "pretty-ms": "^7.0.1",
    "properties-reader": "^2.2.0",
    "strip-ansi": "^6.0.1",
    "uuid": "^8.3.2"
  },
  "peerDependencies": {
    "mocha": ">=7"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "husky": "^5.0.9",
    "lint-staged": "^10.5.4",
    "mocha": "^8.3.0",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "proxyquire": "^2.1.0",
    "should": "^13.2.3",
    "sinon": "^9.2.4"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  },
  "prettier": {
    "arrowParens": "avoid",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "env": {
      "es6": true,
      "mocha": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 9
    }
  }
}
